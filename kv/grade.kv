<GradeScreen>:
    canvas.before:
        Color:
            rgba: BG_DARK
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        # Status bar
        BoxLayout:
            size_hint_y: None
            height: '40dp'
            padding: ['8dp', '4dp']
            canvas.before:
                Color:
                    rgba: BG_DARK
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 1, 1, 1, 0.1
                Line:
                    points: [self.x, self.y, self.right, self.y]
            Button:
                size_hint: None, 1
                width: '36dp'
                background_color: TRANSPARENT
                on_release: root.go_back()
                Label:
                    text: '<'
                    font_size: '20sp'
                    bold: True
                    color: PRIMARY_COLOR
                    center: self.parent.center
            Label:
                text: 'Grade Document'
                font_size: '14sp'
                bold: True
                color: WHITE
                text_size: self.size
                halign: 'left'
                valign: 'middle'
            Label:
                size_hint_x: None
                width: '60dp'
                text: root.page_info
                font_size: '10sp'
                color: 0.4, 0.4, 0.4, 1
                text_size: self.size
                halign: 'right'
                valign: 'middle'

        # Split layout
        BoxLayout:
            orientation: 'horizontal'
            spacing: '0dp'

            # Left: Document preview
            BoxLayout:
                size_hint_x: 0.5
                padding: '8dp'
                canvas.before:
                    Color:
                        rgba: 0.098, 0.149, 0.200, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
                AnchorLayout:
                    Widget:
                        size_hint: 0.9, 0.95
                        canvas:
                            Color:
                                rgba: 1, 1, 1, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [2]
                            Color:
                                rgba: 0.85, 0.85, 0.85, 1
                            Rectangle:
                                pos: self.x + 8, self.y + 8
                                size: self.width - 16, self.height - 16

            # Right: Action buttons
            BoxLayout:
                size_hint_x: 0.5
                orientation: 'vertical'
                padding: '8dp'
                spacing: '8dp'

                # Add Page
                Button:
                    background_color: TRANSPARENT
                    on_release: root.add_page()
                    canvas.before:
                        Color:
                            rgba: 0.075, 0.498, 0.925, 0.1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [8]
                        Color:
                            rgba: 0.075, 0.498, 0.925, 0.4
                        Line:
                            rounded_rectangle: self.x, self.y, self.width, self.height, 8
                    Label:
                        text: '+ ADD PAGE'
                        font_size: '10sp'
                        bold: True
                        color: PRIMARY_COLOR
                        center: self.parent.center

                # Delete
                Button:
                    background_color: TRANSPARENT
                    on_release: root.delete_page()
                    canvas.before:
                        Color:
                            rgba: 0.906, 0.298, 0.235, 0.1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [8]
                        Color:
                            rgba: 0.906, 0.298, 0.235, 0.4
                        Line:
                            rounded_rectangle: self.x, self.y, self.width, self.height, 8
                    Label:
                        text: 'DELETE'
                        font_size: '10sp'
                        bold: True
                        color: DANGER_COLOR
                        center: self.parent.center

                # Grade Now (larger)
                Button:
                    size_hint_y: 1.2
                    background_color: TRANSPARENT
                    on_release: root.grade_now()
                    canvas.before:
                        Color:
                            rgba: PRIMARY_COLOR
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [8]
                    Label:
                        text: 'GRADE NOW'
                        font_size: '13sp'
                        bold: True
                        color: WHITE
                        letter_spacing: 2
                        center: self.parent.center

        # Bottom accent bar
        Widget:
            size_hint_y: None
            height: '4dp'
            canvas:
                Color:
                    rgba: PRIMARY_COLOR
                Rectangle:
                    pos: self.pos
                    size: self.size
